<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg_screen"
    tools:context="com.example.anushka.cookit.selectActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What to cook?"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textAlignment="center"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="RICE"
        android:textSize="25sp"
        android:textStyle="italic"
        android:id="@+id/rice_button"
        android:padding="20sp"
        android:layout_margin="15sp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="DAL"
        android:textSize="25sp"
        android:textStyle="italic"
        android:padding="20sp"
        android:id="@+id/dal_button"
        android:layout_margin="15sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rice_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="BOTH"
        android:id="@+id/both_button"
        android:textSize="25sp"
        android:textStyle="italic"
        android:padding="20sp"
        android:layout_centerVertical="true"
        android:layout_margin="15sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dal_button"/>

</RelativeLayout>
